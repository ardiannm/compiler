{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "sourceMap": false,
    "outDir": "obj",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": [
    "index.ts",
    "src/**/*.ts", // adjust this path based on your project structure
    "types/**/*.d.ts" // adjust this path based on your project structure
  ]
}
